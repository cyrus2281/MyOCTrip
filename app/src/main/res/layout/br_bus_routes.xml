<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/br_seach_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/br_search"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/br_fav_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/br_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/br_seach_text"
        tools:layout_editor_absoluteY="33dp" />

    <Button
        android:id="@+id/br_fav_btn"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>